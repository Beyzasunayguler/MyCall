<?xml version="1.0" encoding="utf-8"?>
<androidx.gridlayout.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:horizontalSpacing="2dp"
    android:numColumns="auto_fit"
    android:stretchMode="columnWidth"
    android:verticalSpacing="2dp">

    <TextView
        android:id="@+id/idInfoText"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:gravity="center"
        android:text="@string/kullan_c"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/dataTextColor"
        grid:layout_columnWeight="1" />

    <TextView
        android:id="@+id/kullanıcıInfoText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:gravity="center"
        android:text="@string/kullan_c"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/dataTextColor"
        grid:layout_columnWeight="1" />

    <TextView
        android:id="@+id/telnoInfoText"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/kullan_c"
        android:textAlignment="center"
        android:textColor="@color/dataTextColor"
        grid:layout_columnWeight="1" />

    <TextView
        android:id="@+id/mesajText"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="13dp"
        android:textStyle="bold"
        android:text="@string/kullan_c"
        android:textAlignment="center"
        android:textColor="@color/dataTextColor"
        grid:layout_columnWeight="1" />

    <TextView
        android:id="@+id/cevaplandıInfoText"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="13dp"
        android:text="@string/kullan_c"
        android:textAlignment="center"
        android:textColor="@color/dataTextColor"
        grid:layout_columnWeight="1" />


    <TextView
        android:id="@+id/zamanInfoText"
        android:layout_width="89dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/kullan_c"
        android:textAlignment="center"
        android:textColor="@color/dataTextColor"
        grid:layout_columnWeight="1" />

</androidx.gridlayout.widget.GridLayout>
