<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    android:layout_marginTop="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kullan_c"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/telnoText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView"
                android:layout_margin="16dp"
                android:text="@string/deneme"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/zamanText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/telnoText"
                android:layout_margin="32dp"
                android:text="@string/deneme"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cald覺Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/zamanText"
                android:layout_margin="48dp"
                android:text="@string/deneme"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cevapland覺Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cald覺Text"
                android:layout_margin="64dp"
                android:text="@string/deneme"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cekildiText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cevapland覺Text"
                android:layout_margin="80dp"
                android:text="@string/deneme"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/donulduText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cekildiText"
                android:layout_margin="96dp"
                android:text="@string/deneme"
                android:textAlignment="center"
                android:textStyle="bold" />


</androidx.cardview.widget.CardView>

